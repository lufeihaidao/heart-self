= grid(@user_production_grid) do |g|
  / - g.column do |task|
  /   - task.id


  - g.column :name => 'user' do |task|
    - link_to task.user.name, task.user


  - g.column :name => 'production' do |task|
    - link_to "#{task.production.p_color} #{task.production.p_material} #{task.production.p_pattern}", task.production


  - g.column :name => 'order at' do |task|
    - task.order_at


  - g.column :name => 'is sold?' do |task|
    - task.is_sold


  - g.column :name => 'sold_at' do |task|
    - task.sold_at


  - g.column :name => 'production price' do |task|
    - task.production.price


  - g.column :name => 'bargain price' do |task|
    - task.bargain_price


