= grid(@user_production_grid, show_filters: :when_filtered) do |g|
  - g.column :name => 'ID', :attribute => 'id', :filter => false do |task|
    - task.id


  - g.column :name => '用户' do |task|
    - link_to task.user.name, task.user


  - g.column :name => '产品' do |task|
    - link_to "#{task.production.p_color} #{task.production.p_material} #{task.production.p_pattern}", task.production


  - g.column :name => '订于', :attribute => 'order_at' do |task|
    - task.order_at


  - g.column :name => '已出售', :attribute => 'is_sold', :filter => false do |task|
    - task.is_sold ? "Yes" : "No"


  - g.column :name => '售于', :attribute => 'sold_at' do |task|
    - task.sold_at


  - g.column :name => '原价' do |task|
    - task.production.price


  - g.column :name => '交易价' do |task|
    - task.bargain_price


  - g.column   do |task|
    - link_to '编辑', edit_user_production_path(task.id), :class => ""